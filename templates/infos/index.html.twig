{% extends 'base.html.twig' %}

{% block title %}Hello InfosController!{% endblock %}

{% block stylesheets %}
    <link type='text/css' rel='stylesheet' href='{{asset('css/infos.css')}}'>
{% endblock %}

{% block body %}
<div id="infos-container">
    {# top part infos #}
    <div id="infos-titre">
        <h2>
            {{titre}}
        </h2>
    </div>
    <div id="infos-image">
        <img src={{asset(image)}}>
    </div>
    <div id="infos-description">
        <p>
            {{description}}
        </p>
    </div>
    {# infos etat #}
    {% if statut == '1' %}
        <div id="infos-encour">
            <p>
                Une saison est en cour de diffusion sur {{site}},<br> les épisodes sorte le 
                {% if day == 1 %}
                    lundi
                {% elseif day == 2 %}
                    mardi
                {% elseif day == 3 %}
                    mercredi
                {% elseif day == 4 %}
                    jeudi
                {% elseif day == 5 %}
                    vendredi
                {% elseif day == 6 %}
                    samedi
                {% else %}
                    dimanche
                {% endif %}
                à 
                {% if hour|date('A') == 'PM' %}
                    {{hour|date('h:i')}} heure de l'aprés-midi
                {% else %}
                    {{hour|date('h:i')}} Heure du matin
                {% endif %}
                
                
                
            </p>
        </div>
    {% else %}
        <div id="infos-termine">
            Il n'y a aucune saison en cour de diffusion pour l'instant, <br> il y a actuellement {{episodes}} disponible sur {{site}}
        </div>
    {% endif %}

    {# btn #}
    <div id='boutons'>
        <div id='ligne-haut'>
            <div class='bouton' id="infos-watch-{{site}}">
                <a href={{lien}}>
                    <btn>
                        regarder sur {{site}}
                    </btn>
                </a>
            </div>
        </div>
        <div id='ligne-bas'>
            <div class='bouton' id="infos-edit">
                <a href={{path('app_edit',{'id' : id})}}>
                    <btn>
                        mettre à jour
                    </btn>
                </a>
            </div>
            <div class='bouton' id="infos-delete">
                <a href=>
                    <btn>
                        supprimer
                    </btn>
                </a>
            </div>
        </div>
    </div>
</div>


{% endblock %}
