{% extends 'base.html.twig' %}

{% block title %}Hello InfosController!{% endblock %}

{% block stylesheets %}
    <link type='text/css' rel='stylesheet' href='{{asset('css/infos.css')}}'>
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div id="infos-container">
    {# top part infos #}
    <div id="infos-titre">
        <h2>
            {{titre}}
        </h2>
    </div>
    <div id="infos-description">
        <p>
            {{description}}
        </p>
    </div>
    <div id="infos-image">
        <img src={{asset(image)}}>
    </div>
    {# infos etat #}
    {% if statut == '1' %}
        <div id="infos-encour">
            <p>
                Une saison est en cour de diffusion sur {{site}}, les épisodes sorte le 
                {% if day == 1 %}
                    lundi
                {% elseif day == 2 %}
                    mardi
                {% elseif day == 3 %}
                    mercredi
                {% elseif day == 4 %}
                    jeudi
                {% elseif day == 5 %}
                    vendredi
                {% elseif day == 6 %}
                    samedi
                {% else %}
                    dimanche
                {% endif %}
                à 
                {% if hour|date('A') == 'PM' %}
                    {{hour|date('h:i')}} heure de l'aprés-midi
                {% else %}
                    {{hour|date('h:i')}} Heure du matin
                {% endif %}
                
                
                
            </p>
        </div>
    {% else %}
        <div id="infos-termine">
            Il n'y a aucune saison en cour de diffusion pour l'instant, il y a actuellement {{episodes}} disponible sur {{site}}
        </div>
    {% endif %}

    {# btn #}
    <div id="infos-watch">
        <a href={{lien}}>
            <btn>
                regarder sur {{site}}
            </btn>
        </a>
    </div>
    


    <div id="infos-edit">
        {# btn edit #}
    </div>
    <div id="infos-delete">
        {# btn delete #}
    </div>

</div>


{% endblock %}
